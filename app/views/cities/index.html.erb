<!DOCTYPE html>
<html>
  <head>
    <title>Cities</title>
  </head>
  <body>
    <div class="d-flex justify-content-center">
      <div class="col">
        <% @cities.each do |city| %>
          <div class="list-group">
            <a href="<%= city_path(city.id) %>" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= city.name%></h5>
              </div>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>