<% @comments.each do |comment| %>
<div>
  <div>
    <%= comment.content %>
    <small><%= comment.update_at</small>
  </div>
  <div class="row justify-content-center">
    <%= link_to "V", edit_comment_path, class: "btn btn-primary" %><%= link_to "X", comment_path(comment.id), :class => "btn btn-danger", :method => :delete, :confirm => "Are you sure?" %>
  </div>

</div>
<% end %>